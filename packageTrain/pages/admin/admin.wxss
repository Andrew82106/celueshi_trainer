/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f6fb;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  padding: 30rpx;
  background-color: #8053A1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(128, 83, 161, 0.2);
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 返回按钮样式 */
.back-btn {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

/* 欢迎区域样式 */
.admin-welcome {
  width: 90%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.welcome-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 卡片网格布局 */
.menu-grid {
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.menu-card {
  width: 46%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.menu-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-icon-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0e6f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.footer {
  margin-top: auto;
  padding: 30rpx 0;
  text-align: center;
  width: 100%;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}