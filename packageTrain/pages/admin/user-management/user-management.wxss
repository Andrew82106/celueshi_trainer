/* 用户管理页面样式 */
.container {
  min-height: 100vh;
  background-color: #f8f4fc;
  padding-bottom: 30rpx;
}

.header {
  width: 100%;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 0rpx;
  position: relative;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.title {
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

/* 操作区样式 */
.action-header {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  background-color: #f0e6f5;
}

.update-all-btn {
  background-color: #5f3d77;
  color: #fff;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  margin: 0 10rpx;
}

/* 进度条样式 */
.progress-bar {
  width: 90%;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  margin: 15rpx auto;
  position: relative;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #8053A1;
  border-radius: 20rpx;
  transition: width 0.3s;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 24rpx;
  text-shadow: 0 0 5rpx rgba(0, 0, 0, 0.5);
  z-index: 1;
}

/* 搜索框样式 */
.search-box {
  width: 90%;
  margin: 30rpx auto 20rpx;
  display: flex;
  background-color: #fff;
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #e9e0f5;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border-radius: 0 50rpx 50rpx 0;
}

/* 用户列表样式 */
.user-list {
  width: 90%;
  margin: 0 auto;
}

.user-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.3s, box-shadow 0.3s;
  border: 1rpx solid rgba(153, 105, 199, 0.1);
}

.user-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #9969c7;
  box-shadow: 0 2rpx 10rpx rgba(153, 105, 199, 0.3);
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.user-stats {
  display: flex;
  flex-direction: column;
}

.user-stat-item {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
  background-color: #f6f0ff;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.user-admin-status {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.admin-tag {
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 14rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(153, 105, 199, 0.3);
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 分页样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.page-btn {
  padding: 12rpx 30rpx;
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin: 0 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(153, 105, 199, 0.2);
  transition: transform 0.2s;
}

.page-btn:active {
  transform: scale(0.95);
}

.page-btn.disabled {
  background: #e0dae8;
  color: #a8a8a8;
  box-shadow: none;
}

.page-info {
  font-size: 26rpx;
  color: #666;
  background-color: #f6f0ff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

/* 用户详情弹窗样式 */
.user-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(3px);
}

.modal-content {
  position: absolute;
  width: 90%;
  max-height: 85%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 25rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
}

.modal-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.close-btn {
  color: #fff;
  font-size: 46rpx;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0e6f5;
  background-color: #f8f4fc;
}

.detail-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 4rpx solid #9969c7;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 15rpx rgba(153, 105, 199, 0.3);
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.user-id {
  font-size: 24rpx;
  color: #999;
  background-color: #f0e6f5;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.detail-stats {
  padding: 30rpx;
  overflow-y: auto;
}

.stat-group {
  display: flex;
  margin-bottom: 25rpx;
  background-color: #f8f4fc;
  border-radius: 15rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid #e9e0f5;
  min-width: 100rpx;
  text-align: center;
}

.admin-actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0e6f5;
  background-color: #f8f4fc;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.primary {
  background: linear-gradient(135deg, #9969c7 0%, #6a4b96 100%);
  color: #fff;
}

.action-btn.danger {
  background: linear-gradient(135deg, #ff7b7b 0%, #ff5252 100%);
  color: #fff;
}

/* 返回按钮样式 */
.back-btn {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
} 