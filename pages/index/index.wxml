<!--index.wxml-->
<navigation-bar title="知行" back="{{false}}" color="black" background="#FFF"></navigation-bar>
<scroll-view class="scrollarea" scroll-y>
  <view class="container">
    <view class="card-grid">
      <view class="training-card" bindtap="navigateTranslate" hover-class="card-hover">
        <view class="card-icon translate-icon"></view>
        <text class="card-title">中英互翻训练</text>
      </view>
      
      <view class="training-card" bindtap="navigateToDotTraining" hover-class="card-hover">
        <view class="card-icon dot-icon"></view>
        <text class="card-title">圆点闪视训练</text>
      </view>
      
      <view class="training-card" bindtap="navigateToSchulte" hover-class="card-hover">
        <view class="card-icon schulte-icon"></view>
        <text class="card-title">舒尔特表训练</text>
      </view>
      
      <view class="training-card" bindtap="navigateToAudioTraining" hover-class="card-hover">
        <view class="card-icon audio-icon"></view>
        <text class="card-title">正听反说训练</text>
      </view>
      
      <view class="training-card" bindtap="navigateToProfile" hover-class="card-hover">
        <view class="card-icon profile-icon"></view>
        <text class="card-title">个人信息</text>
      </view>
      
      <view class="training-card" bindtap="navigateToAbout" hover-class="card-hover">
        <view class="card-icon about-icon"></view>
        <text class="card-title">关于</text>
      </view>
    </view>
    
    <!-- 山门训练按钮 -->
    <view class="shanmen-btn-container">
      <view class="shanmen-btn" bindtap="navigateToShanmen">
        <text class="btn-shanmen-title">知行</text>
        <text class="btn-shanmen-sub">训练</text>
      </view>
    </view>
  </view>
</scroll-view>