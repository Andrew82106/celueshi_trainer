/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f9fc;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 40rpx;
  margin-top: 100rpx;
  min-height: 100%;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.training-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
  transition: all 0.2s ease;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

