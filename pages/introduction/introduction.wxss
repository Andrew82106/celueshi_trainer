.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: #666;
}

.info-card {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a90e2;
  display: block;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #4a90e2;
  padding-left: 20rpx;
}

.info-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

.feature-item {
  margin-bottom: 30rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

.feature-tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.feature-tag {
  background: #e8f3ff;
  color: #4a90e2;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.footer {
  margin-top: 60rpx;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}