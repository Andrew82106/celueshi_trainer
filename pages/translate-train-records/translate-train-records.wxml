<!--pages/translate-train-records/translate-train-records.wxml-->
<page-meta>
    <navigation-bar 
        title="评测结果" 
        back="{{true}}"
        bindback="onBack"
    ></navigation-bar>
</page-meta>

<view class="container">
    <view class="overall-score">
        综合准确率：{{evaluationResult.accuracy * 100}}%
    </view>
    
    <view class="detail-list">
        <block wx:for="{{evaluationResult.details}}" wx:key="index">
            <view class="detail-item">
                <view class="question">
                    <text class="label">原文：</text>{{item.source}}
                </view>
                <view class="reference">
                    <text class="label">参考译文：</text>{{item.reference}}
                </view>
                <view class="user-translation">
                    <text class="label">你的译文：</text>{{item.userTranslation}}
                </view>
                <view class="score">
                    <text class="label">单项得分：</text>{{item.score * 100}}%
                </view>
            </view>
        </block>
    </view>
</view>