/* pages/translate-train-records/translate-train-records.wxss */
.suggestions {
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
}

.suggestion-item {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    margin: 10rpx 0;
}

.score {
    font-size: 30rpx;
    color: #4a90e2;
    margin: 20rpx 0;
}

/* 新增样式 */
.detail-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 32rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.section {
    margin-bottom: 28rpx;
}

.section-label {
    font-size: 28rpx;
    color: #4a90e2;
    font-weight: 500;
}

.section-content {
    font-size: 30rpx;
    color: #333;
    line-height: 1.6;
    display: block;
    margin-top: 12rpx;
}

.reference {
    color: #666;
}

.user-translation {
    color: #4a90e2;
}

.score-section {
    border-top: 2rpx solid #eee;
    padding-top: 28rpx;
    margin-top: 28rpx;
}

.score-text {
    font-size: 32rpx;
    color: #ff6b6b;
    font-weight: bold;
}

.suggestions-title {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin: 20rpx 0;
}

.suggestion-item {
    font-size: 26rpx;
    color: #888;
    line-height: 1.6;
    margin: 12rpx 0;
}

.suggestion-index {
    color: #4a90e2;
    margin-right: 8rpx;
}