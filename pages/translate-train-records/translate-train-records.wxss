/* pages/translate-train-records/translate-train-records.wxss */
.suggestions {
    margin-top: 20rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #eee;
}

.suggestion-item {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    margin: 10rpx 0;
}

.score {
    font-size: 30rpx;
    color: #4a90e2;
    margin: 20rpx 0;
}

/* 新增样式 */
.overall-score {
    background: linear-gradient(135deg, #08a8ff, #0066cc);
    color: white;
    padding: 32rpx;
    border-radius: 16rpx;
    margin: 20rpx 0;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.detail-list {
    margin-top: 40rpx;
}

.detail-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.section {
    margin-bottom: 28rpx;
}

.section-label {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 12rpx;
}

.section-content {
    font-size: 30rpx;
    line-height: 1.6;
    color: #333;
    display: block;
    padding: 16rpx;
    background: #f8f8f8;
    border-radius: 8rpx;
}

.reference {
    color: #07c160;
    border-left: 4rpx solid #07c160;
    padding-left: 12rpx;
}

.user-translation {
    color: #08a8ff;
    border-left: 4rpx solid #08a8ff;
    padding-left: 12rpx;
}

.score-section {
    border-top: 2rpx solid #eee;
    padding-top: 28rpx;
    margin-top: 28rpx;
}

.score-text {
    font-size: 32rpx;
    color: #ff6b6b;
    font-weight: bold;
}

.suggestions-title {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin: 20rpx 0;
}

.suggestion-item {
    font-size: 26rpx;
    color: #888;
    line-height: 1.6;
    margin: 12rpx 0;
}

.suggestion-index {
    color: #4a90e2;
    margin-right: 8rpx;
}

.icon {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 0 auto;
}

/* 修正后的按钮样式 */
.home-button-container {
    margin: 40rpx 0;
    padding: 0 30rpx;
}

.home-button {
    width: 100%;
    background: linear-gradient(135deg, #08a8ff, #0066cc);
    color: white;
    border-radius: 50rpx;
    padding: 25rpx 0;
    font-size: 32rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
    transition: all 0.2s;
}

.home-button:hover {
    transform: scale(0.98);
    opacity: 0.9;
}