/* pages/translate-drill/translate-drill.wxss */
.container {
    padding: 20rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.progress {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 40rpx;
    text-align: center;
}

.card {
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
    padding: 32rpx;
    margin-bottom: 40rpx;
}

.source-text {
    font-size: 32rpx;
    line-height: 1.6;
    color: #333;
    border-left: 8rpx solid #07c160;
    padding-left: 20rpx;
    margin-bottom: 40rpx;
}

.translation-input {
    font-size: 30rpx;
    min-height: 200rpx;
    padding: 20rpx;
    border: 2rpx solid #eee;
    border-radius: 12rpx;
    background: #f8f8f8;
}

.action-buttons {
    display: flex;
    gap: 20rpx;
    justify-content: space-between;
}

.nav-button {
    flex: 1;
    border-radius: 12rpx;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.prev-button {
    background: #f0f0f0;
    color: #666;
}

.next-button {
    background: #07c160;
    color: white;
}

button[disabled] {
    opacity: 0.6;
}