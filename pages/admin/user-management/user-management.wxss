/* 用户管理页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.header {
  width: 100%;
  padding: 30rpx;
  background-color: #8053A1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 0rpx;
  position: relative;
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 操作区样式 */
.action-header {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-around;
  background-color: #f0e6f5;
}

.update-all-btn {
  background-color: #5f3d77;
  color: #fff;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  margin: 0 10rpx;
}

/* 进度条样式 */
.progress-bar {
  width: 90%;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  margin: 15rpx auto;
  position: relative;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #8053A1;
  border-radius: 20rpx;
  transition: width 0.3s;
}

.progress-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 24rpx;
  text-shadow: 0 0 5rpx rgba(0, 0, 0, 0.5);
  z-index: 1;
}

/* 搜索框样式 */
.search-box {
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 80rpx;
  background-color: #8053A1;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

/* 用户列表样式 */
.user-list {
  width: 90%;
  margin: 0 auto;
}

.user-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #8053A1;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-stats {
  display: flex;
  flex-direction: column;
}

.user-stats text {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.user-admin-status {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.admin-tag {
  background-color: #8053A1;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 分页样式 */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.page-btn {
  padding: 10rpx 30rpx;
  background-color: #8053A1;
  color: #fff;
  font-size: 26rpx;
  border-radius: 6rpx;
  margin: 0 20rpx;
}

.page-btn.disabled {
  background-color: #ccc;
  color: #999;
}

.page-info {
  font-size: 26rpx;
  color: #666;
}

/* 用户详情弹窗样式 */
.user-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  width: 90%;
  max-height: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #8053A1;
}

.modal-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  color: #fff;
  font-size: 40rpx;
  line-height: 1;
}

.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.detail-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #8053A1;
  margin-bottom: 20rpx;
}

.detail-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.detail-stats {
  padding: 30rpx;
  overflow-y: auto;
}

.stat-group {
  display: flex;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.admin-actions {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.action-btn.primary {
  background-color: #8053A1;
  color: #fff;
}

.action-btn.danger {
  background-color: #ff6666;
  color: #fff;
}

/* 返回按钮样式 */
.back-btn {
  position: absolute;
  left: 20rpx;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
} 