/* pages/userinfoshanmen/userinfoshanmen.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  padding-top: 150rpx;
}

/* 页面头部 */
.header {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: #ffffff;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin-bottom: 10rpx;
  margin-top: 0;
}

.back-btn {
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  background-color: #f0e6d2;
}

.back-text {
  font-size: 28rpx;
  color: #9F8053;
}

.title-container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.page-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.placeholder-right {
  width: 90rpx;
}

/* 用户基本信息 */
.user-info-section {
  width: 100%;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 15rpx;
  box-sizing: border-box;
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #f0e6d2;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-basic-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  font-size: 28rpx;
  color: #9F8053;
  background-color: #f0e6d2;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  border: 1rpx solid #E6C33C;
}

.last-login {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 加载动画 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #9F8053;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 统计数据区域 */
.statistics-section, .writing-section {
  width: 100%;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 概览统计 */
.stat-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.overview-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.overview-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.overview-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #9F8053;
}

/* 统计卡片 */
.stat-cards {
  display: flex;
  justify-content: space-between;
}

.stat-card {
  width: 48%;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #9F8053;
}

.card-content {
  display: flex;
  flex-direction: column;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #E6C33C;
}

/* 内观写作区域 */
.writing-list {
  display: flex;
  flex-direction: column;
}

.writing-item {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.writing-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.writing-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #9F8053;
}

.writing-date {
  font-size: 24rpx;
  color: #999;
}

.writing-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 展开/收起按钮 */
.toggle-btn {
  text-align: center;
  margin-top: 20rpx;
}

.toggle-btn-text {
  display: inline-block;
  font-size: 24rpx;
  color: #9F8053;
  background-color: #f0e6d2;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 没有数据时的提示 */
.no-data-tip {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-data-tip text {
  font-size: 28rpx;
  color: #999;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  color: #9F8053;
  font-size: 24rpx;
}

/* 内观写作详情模态框 */
.writing-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.writing-modal-content {
  width: 85%;
  max-height: 80%;
  background-color: #ffffff;
  border-radius: 15rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.writing-modal-header {
  position: relative;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #f0e6d2;
}

.writing-modal-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #9F8053;
}

.writing-modal-close {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  border-radius: 50%;
}

.writing-modal-body {
  padding: 20rpx 30rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 200rpx;
}

.writing-detail-date {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  text-align: center;
}

.writing-detail-content-scroll {
  flex: 1;
  height: 400rpx;
  overflow-y: auto;
}

.writing-detail-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
  padding-bottom: 20rpx;
}

.writing-modal-footer {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1rpx solid #f0e6d2;
  background-color: #faf7f1;
}

.writing-stats {
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.stat-item-modal {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 20rpx;
}

.stat-label-modal {
  font-size: 24rpx;
  color: #9F8053;
  margin-bottom: 5rpx;
}

.stat-value-modal {
  font-size: 30rpx;
  font-weight: 500;
  color: #E6C33C;
} 