/* pages/profileshanmen/profileshanmen.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
}

/* 头部样式 */
.header {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 80rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid #eee;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  display: block;
  font-size: 24rpx;
  color: #9F8053;
  margin-top: 5rpx;
}

.avatar-tip {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}

.user-desc {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #999;
}

/* 返回主页按钮样式 */
.home-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  margin-left: auto;
  background-color: #f0e6d2;
  border-radius: 12rpx;
}

.home-text {
  font-size: 22rpx;
  color: #9F8053;
}

/* 管理按钮样式 */
.admin-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  background-color: #8053A1;
  border-radius: 12rpx;
}

.admin-text {
  font-size: 22rpx;
  color: #fff;
}

/* 统计部分样式 */
.statistics-section {
  width: 100%;
  margin-top: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.online-status-container {
  display: flex;
  align-items: center;
}

.online-count {
  font-size: 24rpx;
  color: #E6C33C;
  margin-right: 10rpx;
  font-weight: bold;
}

.online-status-tip {
  font-size: 20rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

/* 刷新在线状态按钮 */
.refresh-online-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 14rpx;
  background-color: #E6C33C;
  color: white;
  font-size: 22rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.stat-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

/* 颂钵卡片的值使用紫色主题 */
.stat-card:nth-child(2) .stat-value {
  color: #8053A1;
}

/* 木鱼卡片的值使用棕色主题 */
.stat-card:first-child .stat-value {
  color: #9F8053;
}

/* 历史记录部分样式 */
.history-section {
  width: 100%;
  margin-top: 30rpx;
}

.calendar {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.day-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.calendar-body {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  position: relative;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 5rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.calendar-day.has-data {
  background-color: #fff;
}

.calendar-day.no-data {
  background-color: #f5f5f5;
}

.calendar-day.today {
  background-color: #f0e6d2;
}

.calendar-day.empty {
  background-color: transparent;
  min-height: 0;
}

.day-number {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.calendar-day.no-data .day-number {
  color: #999;
}

.day-activities {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  width: 100%;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.activity-icon {
  width: 24rpx;
  height: 24rpx;
}

.activity-count {
  font-size: 20rpx;
  color: #666;
}

.activity-time {
  font-size: 18rpx;
  color: #9F8053;
  margin-top: 4rpx;
}

.muyu {
  background-color: #9F8053;
}

.songbo {
  background-color: #8053A1;
}

/* 页脚样式 */
.footer {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #999;
}

/* 排名部分样式 */
.ranking-section {
  width: 100%;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 榜单切换按钮样式 */
.ranking-tabs {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #f9f9f9;
  border: 1rpx solid #eee;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.05);
}

.ranking-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
}

.ranking-tab.active {
  background-color: #9F8053;
  color: #fff;
  font-weight: bold;
}

.ranking-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #E6C33C;
}

.ranking-list {
  width: 100%;
  margin-top: 20rpx;
}

.ranking-header, .ranking-item {
  display: flex;
  width: 100%;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.ranking-header {
  font-weight: bold;
  color: #333;
}

.rank-column {
  width: 10%;
  text-align: center;
}

.name-column {
  width: 30%;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time-column {
  width: 20%;
  text-align: center;
}

.count-column {
  width: 20%;
  text-align: center;
}

.level-column {
  width: 20%;
  text-align: center;
  color: #9F8053;
}

.current-user {
  background-color: rgba(189, 174, 141, 0.1);
  font-weight: bold;
}

/* 在线用户样式 */
.online-user {
  color: #E6C33C; /* 金色 */
  font-weight: bold;
  animation: floatGold 2s infinite alternate ease-in-out;
}

/* 浮动金色动画 */
@keyframes floatGold {
  0% {
    color: #E6C33C;
    text-shadow: 0 0 1px rgba(230, 195, 60, 0.3);
  }
  100% {
    color: #FFD700;
    text-shadow: 0 0 3px rgba(255, 215, 0, 0.6);
  }
}

/* 加载动画样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(189, 174, 141, 0.3);
  border-radius: 50%;
  border-top-color: #9F8053;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #9F8053;
}

/* 跳转排行榜按钮样式 */
.navigate-ranking-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx auto 20rpx;
  padding: 12rpx 30rpx;
  background: linear-gradient(to right, #9F8053, #E6C33C);
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  width: 60%;
}

.navigate-ranking-button text {
  color: white;
}

.navigate-icon {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-bottom: 8rpx solid white;
  transform: rotate(90deg);
}

/* 展开按钮样式 */
.expand-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 10rpx 0;
  color: #9F8053;
  font-size: 28rpx;
  border-top: 1rpx solid #f0f0f0;
}

.expand-icon {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #9F8053;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* 切换排行榜按钮 */
.toggle-ranking-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 30rpx auto;
  padding: 20rpx 40rpx;
  width: 320rpx;
  background: linear-gradient(to right, #9F8053, #E6C33C);
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 12rpx rgba(159, 128, 83, 0.3);
  transition: all 0.3s ease;
}

.toggle-ranking-button:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(159, 128, 83, 0.2);
}

.toggle-icon {
  margin-left: 14rpx;
  width: 0;
  height: 0;
  border-left: 14rpx solid transparent;
  border-right: 14rpx solid transparent;
  border-top: 14rpx solid white;
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

/* 刷新数据按钮 */
.refresh-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  background-color: #9F8053;
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.refresh-button text {
  color: white;
}

/* 查看更多按钮样式 */
.view-more-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx 0;
  color: #9F8053;
  font-size: 28rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #FFFBF2;
  border-radius: 8rpx;
}

.view-more-icon {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 0;
  border-bottom: 10rpx solid #9F8053;
}