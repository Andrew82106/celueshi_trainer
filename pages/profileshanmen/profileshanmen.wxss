/* pages/profileshanmen/profileshanmen.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 20rpx;
}

/* 头部样式 */
.header {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 80rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
  border: 2rpx solid #eee;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  color: #999;
}

/* 统计部分样式 */
.statistics-section {
  width: 100%;
  margin-top: 30rpx;
}

.section-title {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.stat-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.card-content {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
}

/* 颂钵卡片的值使用紫色主题 */
.stat-card:nth-child(2) .stat-value {
  color: #8053A1;
}

/* 木鱼卡片的值使用棕色主题 */
.stat-card:first-child .stat-value {
  color: #9F8053;
}

/* 历史记录部分样式 */
.history-section {
  width: 100%;
  margin-top: 30rpx;
}

.calendar {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.day-label {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.calendar-body {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-day {
  position: relative;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.today {
  background-color: #f0f0f0;
  font-weight: bold;
}

.day-number {
  font-size: 28rpx;
  color: #333;
}

.day-activities {
  display: flex;
  margin-top: 5rpx;
  gap: 5rpx;
}

.day-activity {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.muyu {
  background-color: #9F8053;
}

.songbo {
  background-color: #8053A1;
}

/* 页脚样式 */
.footer {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #999;
} 