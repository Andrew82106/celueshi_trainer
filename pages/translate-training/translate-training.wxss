.file-list {
  padding: 30rpx;
}

.file-card {
  background: #fff;
  border-radius: 25rpx;
  padding: 30rpx;
  margin-top: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.back-btn {
    padding: 20rpx 30rpx;
    color: #4a90e2;
    font-size: 30rpx;
    margin-bottom: 30rpx;
  }
  
.file-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.file-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.file-status {
  font-size: 28rpx;
  color: #4a90e2;
  padding: 8rpx 16rpx;
  border: 1rpx solid #4a90e2;
  border-radius: 8rpx;
}

.file-sample {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.loading {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 新增样式 */
.mode-selector {
    display: flex;
    gap: 20rpx;
    margin: 30rpx 0;
    padding: 0 10rpx;
}

.mode-btn {
    flex: 1;
    text-align: center;
    padding: 20rpx;
    border-radius: 12rpx;
    background: #f0f0f0;
    color: #666;
    transition: all 0.2s;
}

.mode-btn.active {
    background: #07c160;
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(7,193,96,0.3);
}

.file-mode {
    font-size: 24rpx;
    color: #07c160;
    background: #e8f5e9;
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
}

.container {
    padding: 50rpx;
    box-sizing: border-box;
    min-height: 50vh;
} 