/* pages/profile/profile.wxss */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin: 60rpx 0 40rpx;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.login-btn {
  background: #4a90e2;
  color: white;
  padding: 30rpx 80rpx;
  border-radius: 40rpx;
  margin: 100rpx 0 30rpx;
  font-size: 34rpx;
}

.login-tip {
  color: #999;
  font-size: 28rpx;
}

/* 新增样式 start */
.section-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin: 50rpx 0 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #4a90e2;
  padding-right: 40rpx;
  position: relative;
  cursor: pointer;
}

.section-title::after {
  content: '';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  transition: transform 0.3s;
}

.record-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  display: flex;
  flex-wrap: wrap;
  position: relative;
}

.record-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 2rpx;
  background: #f5f5f5;
}

.record-item text {
  font-size: 28rpx;
  color: #666;
  width: 50%;
  padding: 10rpx 0;
}

.record-item text:nth-child(odd) {
  font-weight: 500;
  color: #444;
}

.time-section {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  gap: 20rpx;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
}

.time-badge,
.error-badge {
  flex: none;
  padding: 8rpx 30rpx;
  min-width: 200rpx;
}

.time-badge {
  background: #e8f3ff;
  color: #4a90e2;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.error-badge {
  background: #ffeaea;
  color: #ff4d4d;
  border-radius: 40rpx;
  font-size: 24rpx;
}
/* 新增样式 end */

.records-container {
  transition: max-height 0.3s ease-out;
  width: 100%;
}