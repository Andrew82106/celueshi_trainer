.container {
  padding: 20rpx;
}

.settings {
  margin-bottom: 40rpx;
}

.input-group {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.input-group input {
  border: 1rpx solid #ddd;
  padding: 10rpx 20rpx;
  margin: 0 10rpx;
  width: 150rpx;
}

.training-area {
  position: relative;
  height: 80vh;
}

.countdown {
  font-size: 100rpx;
  color: #4a90e2;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.dot {
  position: absolute;
  background: #4a90e2;
  border-radius: 50%;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-box {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
}

.button-group {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
}

.page-title {
  font-size: 36rpx;
  color: #333;
  margin: 100rpx 0;
}

.back-home {
  padding: 20rpx 40rpx;
  background: #4a90e2;
  color: white;
  border-radius: 8rpx;
} 