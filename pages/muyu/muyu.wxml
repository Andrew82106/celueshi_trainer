<!--pages/muyu/muyu.wxml-->
<view class="container">
  <!-- 背景图片 -->
  <image class="background-image" src="/assets/picture/trainingBackground.jpeg" mode="aspectFill"></image>
  
  <!-- 设置按钮组 -->
  <view class="settings-container">
    <view class="settings-btn" bindtap="toggleTraining">
      <image src="/assets/picture/muyu.png" mode="aspectFit" class="settings-icon"></image>
      <text>{{isTraining ? '结束训练' : '开始训练'}}</text>
    </view>

    <view class="settings-btn" bindtap="{{isAutoTapping ? 'stopAutoTap' : 'showSettingsModal'}}" wx:if="{{isTraining}}">
      <image src="/assets/picture/auto.png" mode="aspectFit" class="settings-icon"></image>
      <text>{{isAutoTapping ? '停止自动' : '自动敲击'}}</text>
    </view>
  </view>
  
  <!-- 敲击计数 -->
  <view class="counter">
    <text class="count-text">{{count}}</text>
    <text class="merit-text">今日功德</text>
    <!--<text class="total-count">总计：{{totalCount}}</text>-->
    <text class="training-time" wx:if="{{isTraining}}">训练时长: {{trainingSeconds}}秒</text>
  </view>
  
  <!-- 木鱼图片 -->
  <view class="muyu-container" bindtap="tapMuyu">
    <image src="cloud://shanmen-2g47tf5h9b090d06.7368-shanmen-2g47tf5h9b090d06-1349502341/muyu.png" mode="aspectFit" class="muyu-image {{isAnimating ? 'tap-animation' : ''}} {{isTraining ? '' : 'disabled-muyu'}}"></image>
  </view>
  
  <!-- 设置模态框 -->
  <view class="modal" wx:if="{{showModal}}">
    <view class="modal-content">
      <view class="modal-header">
        <text class="modal-title">自动敲击设置</text>
      </view>
      <view class="modal-body">
        <text>每次敲击间隔时间（秒）：{{interval}}秒</text>
        <slider min="1" max="50" step="0.5" value="{{interval}}" show-value="{{false}}" block-size="28" activeColor="#9F8053" backgroundColor="#D9D9D9" bindchange="sliderChange"/>
        <text>自动敲击时长（分钟）：{{autoTapDuration}}分钟</text>
        <slider min="1" max="30" step="1" value="{{autoTapDuration}}" show-value="{{false}}" block-size="28" activeColor="#9F8053" backgroundColor="#D9D9D9" bindchange="durationChange"/>
      </view>
      <view class="modal-footer">
        <button class="btn cancel" bindtap="hideSettingsModal">取消</button>
        <button class="btn confirm" bindtap="startAutoTap">确定</button>
      </view>
    </view>
  </view>
</view> 