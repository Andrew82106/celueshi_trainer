/* pages/meditation-writing/edit/index.wxss */
page {
  background-color: #000000;
  min-height: 100vh;
  width: 100%;
  overflow: hidden;
}

.container {
  position: relative;
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: brightness(0.7);
  top: 0;
  left: 0;
}

.header {
  width: 100%;
  padding: 120rpx 30rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  z-index: 10;
}

.page-title {
  font-size: 40rpx;
  color: #fff;
  font-weight: 500;
}

.stats-area {
  width: 94%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  align-items: center;
}

.recent-writing {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  padding: 35rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  width: 90%;
  margin: 30rpx;
}

.section-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 25rpx;
}

.recent-writing-content {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.writing-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 26rpx;
  padding: 0 10rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-bottom: 15rpx;
}

.writing-date {
  background-color: rgba(159, 128, 83, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  color: #333;
}

.writing-counts {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.writing-count, .writing-insight-count {
  background-color: rgba(159, 128, 83, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-weight: 500;
  color: #333;
}

.writing-insight-count {
  background-color: rgba(159, 128, 83, 0.05);
}

.writing-preview {
  font-size: 30rpx;
  line-height: 1.8;
  padding: 20rpx 15rpx;
  border-radius: 20rpx;
  background-color: rgba(159, 128, 83, 0.05);
  color: #333;
  word-wrap: break-word;
  white-space: pre-wrap;
  word-break: break-all;
}

.writing-preview text {
  display: block;
  width: 100%;
}

.no-writing {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  font-size: 30rpx;
  background-color: rgba(159, 128, 83, 0.05);
  border-radius: 20rpx;
  color: #555;
}

.statistics {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  width: 95%;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 0 60rpx;
}

.stat-item:first-child {
  border-right: 1px solid rgba(0, 0, 0, 0.1);
}

.stat-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #9F8053;
}

.stat-label {
  font-size: 28rpx;
  color: #555;
}

.actions-area {
  width: 94%;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding-bottom: 80rpx;
}

.action-button {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 60rpx;
  font-size: 36rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
}

.primary {
  height: 100rpx;
  background-color: #9F8053;
  box-shadow: 0 8rpx 20rpx rgba(159, 128, 83, 0.3);
  width: 85%;
  margin: 0 auto;
  color: white;
}

.action-buttons-row {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  width: 100%;
}

.secondary {
  flex: 1;
  height: 90rpx;
  background-color: #9F8053;
  color: white;
  opacity: 1;
  box-shadow: 0 6rpx 16rpx rgba(159, 128, 83, 0.3);
  border-radius: 50rpx;
} 