/* pages/meditation-writing/edit/index.wxss */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  filter: brightness(0.7);
  top: 0;
  left: 0;
}

.header {
  width: 100%;
  padding: 120rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  z-index: 10;
}

.back-button {
  display: flex;
  align-items: center;
  padding: 12rpx;
}

.back-arrow {
  font-size: 44rpx;
  color: #fff;
  margin-right: 10rpx;
}

.back-text {
  font-size: 32rpx;
  color: #fff;
}

.page-title {
  font-size: 40rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}

.placeholder {
  width: 80rpx;
}

.content-area {
  width: 94%;
  display: flex;
  flex-direction: column;
  margin-bottom: 0;
  flex: 1;
  height: calc(100vh - 180rpx);
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.timer-container {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 18rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.timer-text {
  font-size: 46rpx;
  color: #333;
  font-weight: 500;
}

.timer-controls {
  display: flex;
}

.timer-button {
  padding: 14rpx 28rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.timer-button.start {
  background-color: #9F8053;
  color: white;
}

.timer-button.pause {
  background-color: #e67e22;
  color: white;
}

.timer-button.reset {
  background-color: #bdc3c7;
  color: #333;
}

.writing-guide {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 18rpx;
  padding: 35rpx;
  margin-bottom: 25rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.guide-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
  display: block;
}

.guide-text {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
}

.refresh-button {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: #9F8053;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.writing-area {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 18rpx;
  padding: 35rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.writing-input {
  width: 100%;
  flex: 1;
  min-height: 500rpx;
  font-size: 34rpx;
  line-height: 1.7;
  color: #333;
  padding: 10rpx;
}

.word-count {
  text-align: right;
  padding: 15rpx 0;
  color: #9F8053;
  font-size: 30rpx;
  font-weight: 500;
}

.button-area {
  width: 94%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 0 80rpx;
}

.toggle-timer-button {
  width: 70%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9F8053;
  border-radius: 45rpx;
  color: white;
  font-size: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 6rpx 12rpx rgba(159, 128, 83, 0.3);
  font-weight: 500;
}

.submit-button {
  width: 85%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #9F8053;
  border-radius: 50rpx;
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 20rpx;
}

.submit-button.disabled {
  background-color: #ccc;
  color: #999;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 内观写作字数输入区域 */
.meditation-count-container {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 18rpx;
  padding: 25rpx 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.meditation-count-title {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.meditation-count-title text:first-child {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-right: 15rpx;
}

.meditation-count-hint {
  font-size: 24rpx;
  color: #888;
  font-weight: normal;
}

.meditation-count-input-area {
  display: flex;
  align-items: center;
  background-color: rgba(250, 250, 250, 0.8);
  border-radius: 10rpx;
  padding: 15rpx 20rpx;
  border: 1px solid #eee;
}

.meditation-count-input {
  flex: 1;
  height: 70rpx;
  font-size: 32rpx;
  color: #333;
}

.meditation-count-unit {
  font-size: 30rpx;
  color: #555;
  margin-left: 10rpx;
}

/* 感想输入区域标题 */
.writing-area-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

/* 感想可见性设置 */
.visibility-setting {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 25rpx;
  margin-top: 20rpx;
  border-top: 1px solid #eee;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.visibility-text-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.visibility-text {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.visibility-description {
  color: #666;
  font-size: 22rpx;
  max-width: 450rpx;
  line-height: 1.4;
}

.visibility-switch {
  position: relative;
  width: 90rpx;
  height: 50rpx;
  background-color: #e0e0e0;
  border-radius: 25rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.visibility-switch.on {
  background-color: #9F8053;
}

.visibility-switch.off {
  background-color: #ccc;
}

.switch-slider {
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.15);
  left: 4rpx;
  top: 4rpx;
  transition: all 0.3s ease;
}

.visibility-switch.on .switch-slider {
  left: calc(100% - 46rpx);
} 